{
  "name": "snake",
  "version": "1.0.0",
  "engines": {
    "node": "20.11.0"
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4"
  },
  "scripts": {
    "build": "yarn build:js && yarn build:css && cp src/index.html dist",
    "build:js": "esbuild src/snake.js --bundle --minify --outfile=dist/snake.js",
    "build:css": "esbuild src/style.css --bundle --minify --outfile=dist/style.css --loader:.ttf=file",
    "start": "yarn build && python3 -m http.server 3000 --directory=dist",
    "lint:js": "npx eslint src",
    "lint:css": "stylelint src/style.css"
  }
}
